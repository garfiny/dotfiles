[user]
	name = Shuo
	email = shuo@locomote.com.au
[push]
	default = simple
[alias]
	st = status
	co = checkout
	br = branch
	up = rebase
	ci = commit
[core]
	editor = vim
[diff]
[color]
	ui = auto
	# Fancy logging.
	#   h = head
	#   hp = head with patch
	#   r = recent commits, only current branch
        #   ra = recent commits, all reachable refs
	#   l = all commits, only current branch
        #   la = all commits, all reachable refs
	head = !git l -1
	h = !git head
	hp = "!. ~/.githelpers && show_git_head"
	r = !git l -30
	ra = !git r --all
	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all

